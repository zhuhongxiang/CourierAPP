<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.courierapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.DeliveryInfoActivity"></activity>
        <activity android:name=".activity.DeliverySelectCabActivity" />
        <activity android:name=".activity.RecordDetailActivity" />
        <activity android:name=".activity.DeliveryFinishedActivity" />
        <activity android:name=".activity.DeliveryDetailActivity" />
        <activity android:name=".activity.InformationNumberActivity" />
        <activity android:name=".activity.InformationActivity" />
        <activity android:name=".activity.RecordActivity" />
        <activity android:name=".activity.ReceiveRecordActivity" />
        <activity android:name=".activity.ReceiveActivity" />
        <activity android:name=".activity.ReceiveDetailActivity" />
        <activity android:name=".activity.ReceiveRecordDetailActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".utils.TimeCount" />
        <activity android:name=".utils.GlobalData" />
        <activity android:name=".activity.ResetPwdActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>